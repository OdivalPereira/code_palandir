# Port the backend server listens on
PORT=8787

# Public URL where the frontend is hosted (used for CORS and OAuth redirects)
APP_BASE_URL=http://localhost:8080

# Public URL where the backend server is reachable
SERVER_BASE_URL=http://localhost:8787

# Google AI (Gemini) credentials
GOOGLE_AI_API_KEY=your_google_ai_api_key
GOOGLE_AI_MODEL_ID=gemini-2.5-flash
AI_PROVIDER=google

# GitHub OAuth app credentials
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_OAUTH_CALLBACK_URL=http://localhost:8787/api/auth/callback
